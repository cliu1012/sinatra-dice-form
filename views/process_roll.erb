<h1>
  <%= @dice %>d<%= @sides %>
</h1>

<div>
  <a href="/process_roll?dice=<%=@dice%>&sides=<%=@sides%>">Roll again</a> | 
  <a href="/">Go back home</a>
</div>

<ol>
  <% @rolls.each do |roll| %>
    <li>
      <span style="font-style: italic">Result: </span>
      <span style="font-weight: bold"><%= roll %></span> 
    </li>
  <% end %>
</ol>
